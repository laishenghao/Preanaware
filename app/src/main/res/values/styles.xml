<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorTheme</item>
        <item name="android:panelFullBackground">@color/colorTheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@drawable/bg_popup_menu_item</item>
        <item name="android:textColor">@color/colorContentForeground</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="TitlebarTextStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/titlebar_text_size</item>
        <item name="android:textColor">@color/colorForegroundTheme</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_btn</item>
    </style>

    <style name="TransmitControlBarTextStyle">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/colorContentForeground</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_bottombar_btn</item>
        <!--<item name="android:layout_marginStart">1dp</item>-->
    </style>

    <style name="ChartControlBarTextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/chart_control_bar_text_size</item>
        <item name="android:textColor">@color/colorFocusableForeground</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorContentForeground</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_btn</item>
        <!--<item name="android:layout_marginStart">1dp</item>-->
    </style>

    <style name="ViewModeSwitchTextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorFocusableForeground</item>
        <item name="android:textColorPrimaryDisableOnly">#e9f3f9</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_btn</item>
        <!--<item name="android:layout_marginStart">1dp</item>-->
    </style>

    <style name="PreanDataListTextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textColor">#e9f3f9</item>-->
        <item name="android:gravity">center</item>
        <item name="android:background">#33e9f3f9</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <style name="FileListControlBarTextStyle">
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorFocusableForeground</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorContentForeground</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_btn</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/colorContentForeground</item>
        <item name="android:gravity">start</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="VernierBaseInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#08253e</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

</resources>
